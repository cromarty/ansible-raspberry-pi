debugFile={{ fenrir_daemon_general_debugFile|default('/var/log/fenrirscreenreader/fenrir.log') }}
punctuationProfile={{ fenrir_daemon_general_punctuationProfile|default('default') }}
punctuationLevel={{ fenrir_daemon_general_punctuationLevel|default('some') }}
respectPunctuationPause={{ (fenrir_daemon_general_respectPunctuationPause|default(true))|ternary(True,False) }}
newLinePause={{ (fenrir_daemon_general_newLinePause|default(true))|ternary(True,False) }}
numberOfClipBoards={{ fenrir_daemon_general_numberOfClipBoards|default(10) }}
# used path for "export_clipboard_to_file"
