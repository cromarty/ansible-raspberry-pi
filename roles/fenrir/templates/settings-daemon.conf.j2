# shell for PTY emulatiun (empty = default shell)
shell={{ fenrir_daemon_general_shell|default('') }}

[focus]
#follow the text cursor
cursor={{ (fenrir_daemon_focus_cursor|default(true))|ternary(True,False) }}
#follow highlighted text changes
